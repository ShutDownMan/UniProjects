<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/itemNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="11dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="12dp"
        android:text="@string/item_name"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/itemCostTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/itemNameTextView"
        android:layout_marginEnd="14dp"
        android:layout_marginRight="14dp"
        android:text="R$ 1.99"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/itemQntTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/itemCostTextView"
        android:layout_below="@+id/itemNameTextView"
        android:text="@string/item_qnt" />
</RelativeLayout>